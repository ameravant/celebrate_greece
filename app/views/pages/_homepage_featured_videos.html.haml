%div
  %h2= section.title
  %ul
    -for feature in features 
      %li
        =link_to image_tag(feature.featurable.images.first.image.url(:small), :title => feature.featurable.title, :alt => feature.featurable.title), feature.featurable, :class => "product-image"
        %p= feature.featurable.title
        %p= feature.featurable.video_length
        %p
          -for cat in feature.featurable.product_categories
            -unless cat.permalink == "videos"
              %span=(link_to cat.name, cat) + " "
               